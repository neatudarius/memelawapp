<div ng-app="memeApp" ng-controller="memeControl" ng-init="RemoveNLoadMemes('');LoadTags(1,0);">
  

    <h1 align="center">Meme Law</h1>

    <nav id="memebar" class="navbar navbar-default navbar-static-top" role="navigation">
        <div class="container container-fluid">

            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Meme Law</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse">
                <form class="navbar-form navbar-right" role="search">
                    <div class="form-group">
                        <input type="text" class="form-control" ng-model="query_input" autofocus id="main_search" placeholder="Search Hype Meme">
                    </div>
                    <button type="submit" class="btn btn-default" ng-click="RemoveNLoadMemes(query_input)">Go for it!</button>
                </form>
        
            </div><!-- /.navbar-collapse -->

        </div>
    </nav>

    <div class="container">
        
        <div class="jumbotron">HEADER
            <button type="button" class="btn btn-danger" data-toggle="collapse" data-target="#demo" aria-expanded="true" aria-controls="demo">
                    simple collapsible
            </button>

            <div id="demo" class="collapse in">.hide me show me</div>
        </div>
        <div class="memeWrap clear" infinite-scroll="LoadMemes(query_input)" infinite-scroll-disabled='isFetching' infinite-scroll-distance="2">
            <ul class="memelist">
                <li class="memeitem animate-repeat" ng-repeat="meme in memes">
                    <!--
                    <a data-toggle="collapse" data-target="#meme{{meme.id}}" aria-expanded="true" aria-controls="meme{{memeid}}">
                    <a id="meme-collapse-{{meme.id}}">
                    -->
                        <div class="bg" ng-click="ExpandMeme(meme.id, this);">
                            <div class="image" style="background-image: url('{{meme.url}}');"></div>'
                        </div>
                    <!--</a>-->
                    <div id="meme{{meme.id}}" class="collapse" aria-expanded="true" style="height: 0px;">
                        <h1>Please kill me! <strong>NOW</strong></h1>
                    </div>
                </li>
            </ul>
        </div>
    </div>

    <script>

        $(document).ready(function () {

        var menu = $('#memebar');
        var origOffsetY = menu.offset().top;

        function scroll() {
            if ($(window).scrollTop() >= origOffsetY) {
                $('#memebar').addClass('navbar-fixed-top');
                $('#memebar').removeClass('navbar-static-top');

                $('.content').addClass('menu-padding');
            } else {
                $('#memebar').addClass('navbar-fixed-top');
                $('#memebar').removeClass('navbar-fixed-top');

                $('.content').removeClass('menu-padding');
            }


           }

          document.onscroll = scroll;

        });
    </script>

</div>